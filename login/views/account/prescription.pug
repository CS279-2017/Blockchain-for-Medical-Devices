extends ../layout

block content
  .page-header.center-block
    a.button.btn.btn-primary(href='/') Back to Home
    h3 Request Prescription Refill

  form.form-horizontal(action='/account/prescription', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='doctor') Doctor
      .col-sm-7
        input.form-control(type='text', name='doctor', id='doctor', value=user.prescription.doctor)
    .form-group
      label.col-sm-3.control-label(for='medication') Medication
      .col-sm-7
        input.form-control(type='text', name='medication', id='medication', value=user.prescription.medication)
    .form-group
      label.col-sm-3.control-label(for='description') Current Illnesses
      .col-sm-7
        input.form-control(type='text', name='description', id='description', value=user.prescription.description)
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Request Prescription